- var n = 1

doctype html
html
  head
    title Not Seek
    style
      include style.css
  body 
    h1 Latest Vacancies
    h3 Page Number #{page} of #{pageCount}
    div(class='test-jobs')
      ul
        each job in jobs
         li
            a(href=`/other.html?id=${job.uuid}`) #{job.title}
    a(href=`/?page=${page - 1}`) Previous
      ul(class='pagination')
        while n < pageCount
          li
            a(href=`/?page=${n}`) #{n++}
    a(href=`/?page=${page + 1}`) Next
    